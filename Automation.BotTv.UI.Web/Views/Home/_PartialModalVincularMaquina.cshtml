@model DetalheViewMOD

<div class="modal fade" id="modalVincularMaquina" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gray-light text-gray-dark">
                <h5 class="modal-title">Vincular Máquina</h5>
                <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formVincularMaquina">
                    <input type="hidden" name="CdPainel" value="@Model.Painel.CdPainel" />

                    <div class="mb-3">
                        <label for="cdMaquina" class="form-label">Máquina Disponível</label>
                        <select id="cdMaquina" name="CdMaquina" class="form-select" required>
                            <option value="">Selecione uma máquina...</option>
                            @if (Model.MaquinasDisponiveis != null)
                            {
                                foreach (var maquina in Model.MaquinasDisponiveis)
                                {
                                    <option value="@maquina.CdMaquina">@maquina.TxIdMaquina (@maquina.NoMaquina)</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-outline-green-light me-2" data-bs-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-orange text-white">Vincular</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>