@model HomeViewMOD
@{
    ViewData["Title"] = "Painéis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <i class="fas fa-chart-line fa-2x text-green-light me-2"></i>
            <h2 class="mb-0 text-gray-dark">Painéis de Automação</h2>
        </div>
        <a href="@Url.Action("Cadastrar", "Painel")" class="btn btn-orange text-white">
            <i class="fas fa-plus me-1"></i> Adicionar Novo
        </a>
    </div>
    <div class="card shadow-sm mb-4 mt-5">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-7">
                        <label for="noPainel" class="form-label text-gray-dark">Buscar por Nome</label>
                        <input type="text" class="form-control" id="noPainel" name="noPainel" placeholder="Pesquisar por nome..." value="@Model.NoPainelPesquisa">
                    </div>
                    <div class="col-md-3">
                        <label for="cdPainelTipo" class="form-label text-gray-dark">Tipo de Painel</label>
                        <select class="form-select" id="cdPainelTipo" name="cdPainelTipo">
                            <option value="0">Todos</option>
                            @foreach (var tipo in Model.TiposDePainel)
                            {
                                <option value="@tipo.CdPainelTipo" selected="@(Model.CdPainelTipoPesquisa == tipo.CdPainelTipo)">@tipo.NoPainelTipo</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-green-light text-white">
                            <i class="fas fa-search me-2"></i>Buscar
                        </button>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <a href="@Url.Action("Index")" class="btn btn-outline-green-light">
                            <i class="fas fa-times me-2"></i>Limpar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div>
        <small class="text-muted">Total de Paineis Ativos: <strong>@Model.QtdTotalDeRegistros</strong></small>
    </div>
    <div class="row g-4 mt-2">
        @if (Model.Paineis != null && Model.Paineis.Any())
        {
            @foreach (var painel in Model.Paineis)
            {
                var tipo = painel.CdPainelTipo;
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-white border-bottom-0 text-end">
                            <span class="badge @((tipo == 1) ? "bg-orange" : "bg-green-light") text-white">@painel.PainelTipo.NoPainelTipo</span>
                        </div>
                        <div class="card-body text-center">
                            <h3 class="text-gray-dark fw-bold">@painel.NoPainel</h3>
                        </div>
                        <div class="card-footer bg-white d-grid gap-2">
                            <a href="@Url.Action("Detalhe", new { cdPainel = painel.CdPainel })" class="btn @((tipo == 1) ? "btn-outline-orange" : "btn-outline-green-light")">
                                <i class="fas fa-arrow-right me-1"></i> Acessar
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">
                <p>Nenhum painel encontrado com os filtros aplicados.</p>
            </div>
        }
    </div>
</div>